{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "üß™ Run Pester Tests",
			"type": "shell",
			"command": "pwsh",
			"args": ["-NoProfile", "-Command", "./Run-Tests.ps1"],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": ["$pester"]
		},
		{
			"label": "üî¨ Run Tests with Coverage",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-NoProfile",
				"-Command",
				"./Run-Tests.ps1 -CodeCoverage -OutputFile ./TestResults/test-results.xml"
			],
			"group": "test",
			"problemMatcher": ["$pester"]
		},
		{
			"label": "üèóÔ∏è Build Module Package",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-NoProfile",
				"-Command",
				"$env:PSModulePath = (Join-Path -Path $env:WORKSPACE -ChildPath 'Modules') + ';' + $env:PSModulePath; Import-Module -Name ModuleBuilder -Force; Build-Module -Path ."
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$msCompile"]
		},
		{
			"label": "üì¶ Build PowerShell Module (Copy)",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-NoProfile",
				"-Command",
				"Copy-Item -Recurse -Force ./OSDCloudCustomBuilder ./output"
			],
			"group": "build"
		}
	]
}
