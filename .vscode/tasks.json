{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Module",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "build.ps1"
      ],
      "group": "build"
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "Run-Tests.ps1"
      ],
      "group": "test"
    },
    {
      "label": "Publish Module",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "Publish-Module.ps1"
      ],
      "group": "none"
    }
  ]
}