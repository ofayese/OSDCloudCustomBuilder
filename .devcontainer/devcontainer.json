{
  "name": "PowerShell OSDCloud Development",
  "dockerFile": "Dockerfile",
  "mounts": [
    "source=${localWorkspaceFolder},target=C:/workspace,type=bind,consistency=cached"
  ],
  "settings": {
    "terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
    "powershell.powerShellAdditionalExePaths": {
      "PowerShell 7": "C:\\Program Files\\PowerShell\\7\\pwsh.exe"
    },
    "powershell.powerShellDefaultVersion": "PowerShell 7",
    "editor.formatOnSave": true,
    "powershell.codeFormatting.preset": "OTBS",
    "powershell.scriptAnalysis.enable": true,
    "powershell.pester.useLegacyCodeLens": false,
    "powershell.pester.codeLens": true,
    "powershell.integratedConsole.showOnStartup": true,
    "powershell.debugging.createTemporaryIntegratedConsole": true
  },
  "extensions": [
    "ms-vscode.powershell",
    "davidanson.vscode-markdownlint",
    "eamodio.gitlens",
    "ms-azuretools.vscode-docker",
    "streetsidesoftware.code-spell-checker",
    "redhat.vscode-yaml",
    "yzhang.markdown-all-in-one"
  ],
  "remoteUser": "ContainerAdministrator",
  "postCreateCommand": "pwsh -Command \"& {Write-Host 'Container setup complete!' -ForegroundColor Green}\"",
  "forwardPorts": []
}
