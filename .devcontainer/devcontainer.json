{
  "name": "PowerShell Module Dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "settings": {
    "terminal.integrated.defaultProfile.linux": "pwsh"
  },
  "extensions": [
    "ms-vscode.powershell",
    "eamodio.gitlens",
    "ms-docker.docker-extension"
  ],
  "postCreateCommand": "pwsh -File .devcontainer/devsetup.ps1",
  "remoteUser": "vscode"
}